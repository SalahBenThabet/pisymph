{% extends 'headeradmin.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block content %}
    <h1>Categorie index</h1>
      <!-- Afficher les messages -->
					{% for message in app.flashes('notification') %}

						<div class="alert alert-success alert-dismissible fade show">

							{{ message }}

							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>

						</div>

					{% endfor %}

    <table  = border="2" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.categorie }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
     <script>
		// Activer les fonctionnalit√©s Bootstrap
var alertList = document.querySelectorAll('.alert')
alertList.forEach(function (alert) {
new bootstrap.Alert(alert)
})
	</script>
{% endblock %}
